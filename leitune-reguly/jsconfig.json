{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@public/*": ["./public/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", ".cache", "bundles", "out"],
  "include": ["src/**/*"]
}
